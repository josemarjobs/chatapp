extends ../layout

block content
    h1 Chat Rooms
    a.btn.btn-primary(href="/admin/rooms/add") Create a new chat room
    table.table.table-striped
        thead
            tr
                th
                th
                th Name
                th Id
        tbody
            each room in rooms
                tr
                    td(style="width: 50px;"): a(href="/admin/rooms/delete/#{room._id}")
                        span.glyphicon.glyphicon-remove
                    td(style="width: 50px;"): a(href="/admin/rooms/edit/#{room._id}")
                      span.glyphicon.glyphicon-pencil
                    td= room.name
                    td= room._id
